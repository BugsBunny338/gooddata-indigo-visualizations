{
    "parser": "babel-eslint",

    "plugins": ["react"],

    "extends": "airbnb",

    "env": {
        // I write for browser
        "browser": true,

        // in CommonJS
        "node": true,

        // with mocha
        "mocha": true
    },

    "rules": {
        "indent": [2, 4, { "SwitchCase": 1 }],
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "space-before-function-paren": [2, "never"],

        "comma-dangle": [2, "never"],
        "import/no-extraneous-dependencies": [0],
        "global-require": [0],
        "import/prefer-default-export": [0],
        "import/no-named-as-default": [0],
        "react/prefer-stateless-function": [0],
        "arrow-body-style": [0]
    },

    "globals": {
        "DEBUG": false,
        "TESTING": false,
        "PRODUCTION": false,

        "define": false,
        "require": false,

        "describe": false,
        "context": false,
        "before": false,
        "beforeEach": false,
        "after": false,
        "afterEach": false,
        "it": false,
        "expect": false,
        "sinon": false
    }
}
