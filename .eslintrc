{
    "parser": "babel-eslint",

    "plugins": ["react"],

    "extends": "airbnb",

    "env": {
        // I write for browser
        "browser": true,

        // in CommonJS
        "node": true,

        // with mocha
        "mocha": true
    },

    "rules": {
        "indent": [2, 4, { "SwitchCase": 1 }],
        "comma-dangle": [2, "never"],
        "strict": [0],
        "no-var": [0],
        "one-var": [0],
        "prefer-const": [0],
        "max-len": [0],
        "vars-on-top": [0],
        "func-names": [0],
        "space-before-function-paren": [2, "never"],
        "react/jsx-indent-props": [2, 4],
        "react/prop-types": [0]
    },

    "globals": {
        "DEBUG": false,
        "TESTING": false,
        "PRODUCTION": false,

        "define": false,
        "require": false,

        "describe": false,
        "context": false,
        "before": false,
        "beforeEach": false,
        "after": false,
        "afterEach": false,
        "it": false,
        "expect": false,
        "sinon": false
    }
}
